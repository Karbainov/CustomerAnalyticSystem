<Window x:Class="CustomerAnalyticSystem.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerAnalyticSystem.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Customers">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="267*"/>
                        <ColumnDefinition Width="527*"/>

                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,39,0,0" >
                        <Button Content="Создать нового"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="0,39,0,0" >
                        <Label Content="Имя клиента"/>
                        <TextBox Text="TextBox" TextWrapping="Wrap" Width="527"/>
                        <Label Content="Фамилия клиента"/>
                        <TextBox Text="TextBox" TextWrapping="Wrap" Width="527"/>
                        <Label Content="Тип клиента"/>
                        <ComboBox Width="527"/>
                        <Label Content="Коммент"/>
                        <TextBox Text="TextBox" TextWrapping="Wrap" Width="527"/>
                        <Label Content="Контакт"/>
                        <TextBox Text="TextBox" TextWrapping="Wrap" Width="527"/>

                        <ComboBox Width="527"/>
                        <!--Тут тип контакта-->
                        <Button Content="История заказов"/>
                        <Button Content="Преференсес кастомера"/>
                        <Button Content="Какие продукты(теги) заказывал"/>
                    </StackPanel>
                    <Label Content="Тут стакпанель с именами кастомеров" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="10" Foreground="#FFE82222" FontWeight="Bold" Height="23" Width="198"/>
                    <Label Content="Тут стакпанель с подробностями о кастомерах" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="10" Foreground="#FFE82222" FontWeight="Bold" Height="23" Width="240"/>
                </Grid>
            </TabItem>
            <TabItem Header="Products">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Orders">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="TextBoxGetCustomerId" HorizontalAlignment="Left" Margin="10,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Label x:Name="OrdersLable" Content="Введи ид кастомера" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.469,0.604"/>
                    <Button x:Name="BtnGetCustomer" Content="ПАКАЖИ" HorizontalAlignment="Left" Margin="28,98,0,0" VerticalAlignment="Top" Height="40" RenderTransformOrigin="0.5,0.5" Width="84" Click="BtnGetCustomer_Click">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleY="1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                    <TextBox x:Name="TextBoxCustomerFirstName" HorizontalAlignment="Left" Margin="28,203,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="TextBoxCustomerLastName" HorizontalAlignment="Left" Margin="28,253,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="TextBoxCustomerTypeName" HorizontalAlignment="Left" Margin="28,296,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <StackPanel x:Name="StackPanelContacts" HorizontalAlignment="Left" Height="111" Margin="339,203,0,0" VerticalAlignment="Top" Width="232"/>
                    <StackPanel x:Name="StaclPanelComments" HorizontalAlignment="Left" Height="111" Margin="153,203,0,0" VerticalAlignment="Top" Width="186"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
